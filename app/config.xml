	<adminhtml>
		<theme>default</theme>
	</adminhtml>
	<time_zone>Asia/Kolkata</time_zone>
  </default>
  <adminhtml>
  	<layout>layout.xml</layout>
  </adminhtml>
  <frontend>
  	<layout>layout.xml</layout>
