<?xml version="1.0"?>
<layout>
    <default>
        <block template="1column.phtml" name="root">
            <block template="global/head.phtml" name="head">
                <action addItem="css" file="css/bootstrap.css" params="" cond=""/>
                <action addItem="css" file="css/bootstrap-theme.min.css"/>
                <action addItem="css" file="css/dropzone.css"/>
                <action addItem="css" file="css/jquery-te-1.4.0.css"/>
                <action addItem="css" file="css/custom.css"/>
                <action addItem="js" file="js/lib/jquery-1.9.1.min.js"/>
                <action addItem="js" file="js/lib/bootstrap.js"/>
                <action addItem="js" file="js/lib/jquery.cookie.js"/>
                <action addItem="js" file="js/scripts.js"/>
            </block>
            <block template="global/messages.phtml" name="global_messages"/>
            <block template="global/header.phtml" name="header">
                <block template="global/messages.phtml" name="messages"/>
            </block>
            <block template="global/notices.phtml" name="notices"/>
            <block template="global/footer.phtml" name="footer"/>
            <block template="dashboard/default.phtml" name="content"/>
        </block>
    </default>
    <dashboard_login>
        <reference name="root">
            <action setTemplate="login.phtml"/>
        </reference>
        <reference name="content">
            <action setTemplate="dashboard/login.phtml"/>
        </reference>
    </dashboard_login>
    <dashboard_forget_password>
        <reference name="root">
            <action setTemplate="login.phtml"/>
        </reference>
        <reference name="content">
            <action setTemplate="dashboard/login.phtml"/>
        </reference>
    </dashboard_forget_password>
    <dashboard_index>
        <reference name="content">
            <action setTemplate="dashboard/dashboard.phtml"/>
        </reference>
    </dashboard_index>
    <dashboard_account>
        <reference name="content">
            <action setTemplate="dashboard/account.phtml"/>
        </reference>
    </dashboard_account>
    <dashboard_users>
        <reference name="content">
            <action setTemplate="dashboard/users.phtml"/>
        </reference>
    </dashboard_users>
    <dashboard_edit_users>
        <reference name="content">
            <action setTemplate="dashboard/edit_users.phtml"/>
        </reference>
    </dashboard_edit_users>
    <dashboard_system>
        <reference name="content">
            <action setTemplate="dashboard/system.phtml"/>
        </reference>
    </dashboard_system>
    <page_error404>
        <reference name="content">
            <action setTemplate="global/error_404.phtml"/>
        </reference>
    </page_error404>
    <exception_error404>
        <reference name="root">
            <action setTemplate="exception.phtml"/>
        </reference>
        <reference name="content">
            <action setTemplate="global/error_404.phtml"/>
        </reference>
    </exception_error404>
    <cms_index>
        <reference name="content">
            <action setTemplate="cms/index.phtml"/>
        </reference>
    </cms_index>
    <cms_editpage>
        <reference name="content">
            <action setTemplate="cms/editpage.phtml"/>
        </reference>
    </cms_editpage>
    <cms_createpage>
        <reference name="content">
            <action setTemplate="cms/createpage.phtml"/>
        </reference>
    </cms_createpage>
</layout>