<?xml version="1.0"?>
<layout>
    <default>
        <block type="block/template" template="1column.phtml" name="root">
            <block type="block/template" template="global/head.phtml" name="head">
                <action addItem="css" file="css/bootstrap.css" params="" cond=""/>
                <action addItem="css" file="css/bootstrap-theme.min.css"/>
                <action addItem="css" file="css/dropzone.css"/>
                <action addItem="css" file="css/jquery-te-1.4.0.css"/>
                <action addItem="css" file="css/custom.css"/>
                <action addItem="js" file="js/lib/jquery-1.9.1.min.js"/>
                <action addItem="js" file="js/lib/bootstrap.js"/>
                <action addItem="js" file="js/lib/jquery.cookie.js"/>
                <action addItem="js" file="js/scripts.js"/>
            </block>
            <block type="block/template" template="global/header.phtml" name="header">
                <block template="global/messages.phtml" name="messages"/>
            </block>
            <!--  <block template="global/notices.phtml" name="notices"/> -->
            <block type="block/template" template="global/left.phtml" name="left"/>
            <block type="block/template" template="global/right.phtml" name="right"/>
            <block type="block/template" template="global/footer.phtml" name="footer"/>
            <block type="block/template" template="page/default.phtml" name="content"/>
        </block>
    </default>
    <page_index>
        <reference name="root">
            <action setTemplate="1column.phtml"/>
            <block type="block/template" template="global/ga.phtml" name="ga" toHtml="true"/>
            <block type="block/template" template="global/welcome_note.phtml" name="welcome_note" toHtml="true"/>
        </reference>
        <reference name="content">
            <action setTemplate="page/index.phtml"/>
        </reference>
        <reference name="head">
            <action addItem="css" file="css/page.css" params="" cond=""/>
        </reference>
    </page_index>
    <page_view>
        <reference name="content">
            <action setTemplate="page/view.phtml"/>
        </reference>
    </page_view>
    <page_contact>
        <reference name="root">
            <action setTemplate="2column-left.phtml"/>
        </reference>
        <reference name="content">
            <action setTemplate="page/contact.phtml"/>
        </reference>
    </page_contact>
    <users_login>
        <reference name="content">
            <action setTemplate="users/login.phtml"/>
        </reference>
    </users_login>
    <users_create>
        <reference name="content">
            <action setTemplate="users/create.phtml"/>
        </reference>
    </users_create>
    <users_forget_password>
        <reference name="content">
            <action setTemplate="users/forget_password.phtml"/>
        </reference>
    </users_forget_password>
    <users_profile>
        <reference name="content">
            <action setTemplate="users/profile.phtml"/>
        </reference>
    </users_profile>
    <users_profileview>
        <reference name="content">
            <action setTemplate="users/profileview.phtml"/>
        </reference>
    </users_profileview>
    <install_setup>
        <reference name="root">
            <action setTemplate="install.phtml"/>
        </reference>
    </install_setup>
    <page_error404>
        <reference name="content">
            <action setTemplate="global/error_404.phtml"/>
        </reference>
    </page_error404>
    <exception_error404>
        <reference name="root">
            <action setTemplate="exception.phtml"/>
        </reference>
        <reference name="content">
            <action setTemplate="global/error_404.phtml"/>
        </reference>
    </exception_error404>
</layout>